@model ProjetoLavacaoStreetCar.Models.Empresa
@{
    ViewBag.Title = "Nova Empresa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Save", "Empresa"))
{
   
    @Html.HiddenFor(m => m.Id)
    <div class="form-group">
        @Html.LabelFor(m => m.Nome)
        @Html.TextBoxFor(m => m.Nome, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Nome)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Endereco)
        @Html.TextBoxFor(m => m.Endereco, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Endereco)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Cnpj)
        @Html.TextBoxFor(m => m.Cnpj, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Cnpj)
    </div>

    <button type="submit" class="btn btn-primary">Salvar</button>
}
@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")

}