@model IEnumerable<ProjetoLavacaoStreetCar.Models.Empresa>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Empresa</h2>

<p>
    @Html.ActionLink("Empresa", "New", null, new { @class = "btn btn-primary" })
</p>

@if (@Model.Any())
{
    <table id="empresas" class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Endereco</th>
                <th>Cnpj</th>
                <th></th>

            </tr>
        </thead>
        <tbody>
            @foreach (var empresa in Model)
            {
                <tr>
                    <td> @Html.ActionLink(empresa.Nome, "Details", new { empresa.Id })</td>
                    <td> @empresa.Endereco</td>
                    <td> @empresa.Cnpj</td>
                    <td>
                        <p>
                            @Html.ActionLink(" Editar  ", "Edit", new { empresa.Id }, new { @class = "btn btn-primary" })
                        </p>
                    </td>

                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Nenhuma Empresa existente.</p>

}